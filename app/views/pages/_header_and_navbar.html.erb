<div class="header-navbar-container">
  <h1 class="header">Bizarre Bazaar</h1>
  <div class="navbar">
    <ul class="navbar-items">
      <li class="navbar-item-button"><%= link_to "List an item", new_item_path, class: "button"%></li>
      <div class="right-items">
        <li class="navbar-item-button"><%= link_to "View bookings", bookings_path %></li>
        <% if user_signed_in? %>
          <li class="sign-in-out"><%= link_to "Sign Out", destroy_user_session_path, data: { turbo: true, turbo_method: :delete } %></li>
        <% else %>
          <li class="sign-in-out"><%= link_to "Sign In", new_user_session_path %></li>
        <% end %>
      </div>
    </ul>
  </div>
</div>
<p>Welcome, <%= current_user.first_name %> <%= current_user.last_name %></p>
