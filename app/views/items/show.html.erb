<div class="position relative">
  <%= link_to "Back to Home", root_path %>
  <%= cl_image_tag @item.photo.key, height: 300, width: 400, crop: :fill %>
  <h2> <%= @item.name %> </h2>
  <h4> Â£<%= @item.price%> </h4>
  <div class="item_description_show_page">
    <p> <%= @item.description%> </p>
    <p class="item_category">Category: <%= @item.category%> </p>
    <p>Buy from: <%= @item.user.first_name %> <%= @item.user.last_name %></p>
  </div>
   <%= link_to "Book this item", item_bookings_path(@item), class: "btn btn-secondary", data: { turbo_method: :post } %>
</div>

<h2>Reviews</h2>
<% if @reviews.present? %>
  <ul>
    <% @reviews.each do |review| %>
      <li>
        <strong>Rating:</strong> <%= review.rating %>
        <br>
        <strong>Comment:</strong> <%= review.comment %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews available.</p>
<% end %>
